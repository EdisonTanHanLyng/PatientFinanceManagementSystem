<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PFMS_MI04.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Kaisei+HarunoUmi:wght@700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="icon" type="image/png" href="~/rc-icon.ico">
</head>
<body>
    @RenderBody()

    <aside class="sidebar_body_default">
        <div>
            <span class="material-symbols-outlined fronticonAcc">account_circle</span>
            <span class="material-symbols-outlined fronticonHome">home</span>
            <span class="material-symbols-outlined fronticon">document_scanner</span>
            <span class="material-symbols-outlined fronticon">personal_injury</span>
            <span class="material-symbols-outlined fronticon">crowdsource</span>
            <span class="material-symbols-outlined fronticon">notifications_active</span>
            <span class="material-symbols-outlined fronticon">cloud_upload</span>
            <span class="material-symbols-outlined fronticonLogout">move_item</span>
        </div>
    </aside>

    <aside class="sidebar_body">

        <div class="sidebar_body_personal-acc">
            <span class="sidebar_body_personal-acc_text">&nbsp Personal Account</span>
            <span class="material-symbols-outlined default">account_circle</span>
        </div>

        <div class="sidemenu">
            <div class="sidebar_body_home">
                <span class="sidebar_body_home_text">&nbsp Home</span>
                <span class="material-symbols-outlined default">home</span>
            </div>

            <div class="sidebar_body_document">
                <span class="sidebar_body_document_text">&nbsp Document </span>
                <span class="material-symbols-outlined default">document_scanner</span>
            </div>

            <div class="sidebar_body_patient">
                <span class="sidebar_body_patient_text">&nbsp Patient </span>
                <span class="material-symbols-outlined default">personal_injury</span>
            </div>

            <div class="sidebar_body_sponsor">
                <span class="sidebar_body_sponsor_text">&nbsp Sponsor </span>
                <span class="material-symbols-outlined default">crowdsource</span>
            </div>

            <div class="sidebar_body_reminder">
                <span class="sidebar_body_reminder_text">&nbsp Reminder </span>
                <span class="material-symbols-outlined default">notifications_active</span>
            </div>

            <div class="sidebar_body_backup">
                <span class="sidebar_body_backup_text">&nbsp Backup </span>
                <span class="material-symbols-outlined default">cloud_upload</span>
            </div>

            <div class="sidebar_body_logout">
                <span class="sidebar_body_logout_text">&nbsp Logout</span>
                <span class="material-symbols-outlined default">move_item</span>
            </div>
        </div>

    </aside>

    <footer class="footer">
        <div class="footer_container">
            <div class="logo_container">
                <img src="@Url.Content("~/Image/cm-logo.png")" alt="Curtin_logo" class="curtin_logo">
                <img src="@Url.Content("~/Image/red_crescent_logo.png")" alt="r" class="red_cresent_logo">
            </div>
            <div class="copyright_container">
                <span class="copyright_text">A community knowledge transfer project in collaboration with Miri Red Crescent </span>
                <span class="copyright_text">© Copyright 2024 Curtin University Malaysia. All rights reserved.</span>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site_staff.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>