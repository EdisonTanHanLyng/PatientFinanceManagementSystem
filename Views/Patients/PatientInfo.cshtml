@using PFMS_MI04.Models;
@{
    string dateLongForm = ViewBag.DateLongForm;
    string patientID = ViewBag.givenID;
    ViewData["Title"] = "Patient Info";
}
@{
    Layout = ViewBag.Layout ?? "_Layout_staff"; // Use the layout set in the controller, or default to "_Layout"
}

<link rel="stylesheet" href="~/css/Patients/PatientInfo.css" asp-append-version="true" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<title>Patient Info</title>
<div class="patientI-mainContainer">
    <input type="hidden" value="@patientID" id="givenID">
    <div class="patientI-pageHeader">
        <div class="patientI-leftHead">
            <p>
                <a href="/Mainmenu/Mainmenu">
                    <u>Home</u>
                </a> >
                <a href="/Patients/PatientList">
                    <u>Patients</u>
                </a> >
                <b> Patient Information </b>
            </p>
        </div> 
        <div class="patientI-rightHead">
            <p>
                <b>Date: </b> <p id="date"></p>
                <b>Time: </b> <p id='time'></p>
            </p>
        </div>
    </div>
    <div class="patientI-body">
        <div class="patientI-SummContainer">
            <div class="patientI-Summary">
                <div class="patientI-left">
                    <h2>Description/Information</h2>
                    <p>Name, UserID</p>
                    <p>Age, Gender, Race, Status, Telphone</p>
                    <p>Dialysis Schedule</p>
                    <p>Location</p>
                </div>
                <div class="patientI-right1">
                    <p><b>Status: </b> Sponsor</p>
                    <p><b>ABO Grouping: </b></p>
                    <p><b>Rhesus Factor: </b></p>
                </div>
                <div class="patientI-right2">
                    <div class="patientI-pic">
                        <span>
                            <span class="material-symbols-outlined">
                                account_circle
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <button class="patientI-tassleBtn">
                <span class="material-symbols-outlined">
                    more_horiz
                </span>
            </button>
        </div>
        <div class="patientI-Overview"> <!-- Where the Overview section goes :P -->
            <div class="patientI-Overview-Tabs">
                <ol>
                    <li>
                        <button class="tab1">
                            <h3>History - Overview</h3>
                        </button>
                    </li>
                    <li>
                        <button class="tab2">
                            <h3>Document - Overview</h3>
                        </button>
                    </li>
                </ol>
            </div>
            <div class="patientI-Overview-Content">
                <div class="patientI-Overview-Page1"> <!-- History Overview Page -->
                    <div class="patientI-HistBar-Loading">
                        <!-- Empty div -->
                    </div>
                    <div class="patientI-Overview-HistBar">
                        <!--<button class="patientI-Overview-AddEntry">
                            <span class="material-symbols-outlined">
                                add_circle
                            </span>
                        </button>-->
                        <div class="patientI-HistBar-SearchBar2">
                            <input type="date" id="dateHSearch" name="dateHSearch" />
                        </div>
                        <div class="patientI-HistBar-SearchBar">
                            <span class="material-symbols-outlined">
                                search
                            </span>
                            <input type="text" placeholder="Search By Date" id="histSearch" name="histSearch" />
                        </div>
                    </div>
                    <ol class="patientI-Overview-EntryList" id="patientI-Overview-EntryList">

                    </ol>
                </div>
                <div class="patientI-Overview-Page2"> <!-- Document Overview Page -->
                    <div class="patientI-DocBar-loading">
                        <!-- Empty div -->
                    </div>
                    <div class="patientI-Overview-DocBar">
                        <button class="patientI-DocBar-uploadBtn"> <!-- upload button currently has no link -->
                            Upload New Document
                        </button>
                        <input type="file" id="patientI-FileInput" accept=".pdf, .docx, .doc, .xlsx, .xls, image/*" style="display:none;"/>
                        <div class="patientI-DocBar-SearchBar">
                            <span class="material-symbols-outlined">
                                search
                            </span>
                            <input type="text" placeholder="Search By Document Name" id="docSearch" name="docSearch"/>
                        </div>
                    </div>
                    <ol class="patientI-Overview-DocList">
 
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/Patients/PatientInfo.js" asp-append-version="true" ></script>
</div>