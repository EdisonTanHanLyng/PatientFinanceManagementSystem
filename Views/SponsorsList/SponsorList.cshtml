@using PFMS_MI04.Models;
@{
    ViewData["Title"] = "Sponsors List";
}
@{
    Layout = ViewBag.Layout ?? "_Layout_staff"; // Use the layout set in the controller, or default to "_Layout"
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PFMS_MI04.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/sponsor_list.css" asp-append-version="true" />
    <title>Sponsor List</title>
</head>

<div class="page-wrapper">
    <!-- Header div -->
    <div class="info-bar">
        <div id="file-path"><a id="info_link" href="/MainMenu/mainmenu">Home</a> <a>&nbsp</a> &gt; Sponsor List</div>
        <div id="date-time">
            <span id="date">Date: </span>
            <span id="time">Time: </span>
        </div>
    </div>
   
        <div class="sponsorL-topBar">
            <div class="sponsorL-searchBar">
                <div class="material-symbols-outlined">search</div>
                <input type="text" placeholder="Search" class="sponsor-search-field-input" id="sponsor-search-input" onClick="toggleFilterVisibility()">
            </div>
        </div>
    

    <div id="sponsor-filter" class="sponsor-search-filter" style="display: none;">
             <input type="text" placeholder="Sponsor Name:" class="sponsor-filter-name" id="sponsor-search-name">
             <input type="text" placeholder="Sponsor Code:" class="sponsor-filter-code" id="sponsor-search-code">
             <input type="text" placeholder="Tel:" class="sponsor-filter-tel" id="sponsor-search-tel">
    </div>

    <div class="sponsorL-listContainer">
        <ol class="sponsorL-listContainer_ol">
            <li class="sponsorL-listContainer_list">
                <div class="sponsorL-listContainer_list_image">
                    <p class="sponsorL-listContainer_list_text"><b>Sponsor Name: </b></p>
                    <p class ="sponsorL-listContainer_list_text"><b>Sponsor Code: </b></p>
                    <p class="sponsorL-listContainer_list_text"><b>Contact Person: </b></p>
                    <p class="sponsorL-listContainer_list_text"><b>Tel: </b></p>
                </div>
                <button class="sponsorL-listContainer_button"> Enter </button>
            </li> 
        </ol>
    </div>


    <script src="~/js/SponsorList.js" asp-append-version="true"></script>
</div>

   
